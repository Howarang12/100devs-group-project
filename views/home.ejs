<!DOCTYPE html>
<html lang="en">
<%- include('./partials/_head.ejs') %> 
<body>
  <%- include('./partials/_nav.ejs') %> 
  <header>
    <h1>Homepage</h1>
    <h2></h2>
  </header> 
  <main>
    <h3>Comments</h3>
    <% commentList.forEach( list => { %> 
      <section class="message" data-id ='<%=list._id%>'>
        <h4><%= list.username %></h4>
        <p><%= list.comment %> </p>
        <span><%= list.likes.length %> </span>
        <span><%= list.date %> </span>
        <% if(user && user.googleId === list.googleId) { %> 
          <button class="delete-btn"> Delete </button>
          <button class="edit-btn">Edit</button>
        <% } %> 
      </section>
    <% }) %> 
  </main>
  <form action="/comment/new-comment" method="post">
    <% if (user) { %>
      <label for="comment">Post a comment</label>
      <input type="text" placeholder="Enter your comment" name="comment">
      <input type="submit"> 
    <% } %> 
  </form>

  <script src="js/main.js"></script>
</body>
</html>
